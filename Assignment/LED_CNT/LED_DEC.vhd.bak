LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
--USE IEEE.STD_LOGIC_ARITH.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY LED_DEC IS
	PORT ( LED_ENCODE : IN  STD_LOGIC_VECTOR (3 DOWNTO 0);
			LED_CODE : OUT  STD_LOGIC_VECTOR (6 DOWNTO 0)
	);
END ENTITY LED_DEC;

ARCHITECTURE ART1 OF LED_DEC IS
BEGIN
  PROCESS(LED_ENCODE)
  BEGIN
    CASE(LED_ENCODE) IS
	   WHEN "0000" =>
		  LED_CODE <= "1111110";
	   WHEN "0001" =>
		  LED_CODE <= "0110000";
	   WHEN "0010" =>
		  LED_CODE <= "1101101";
	   WHEN "0011" =>
		  LED_CODE <= "1111001";
	   WHEN "0100" =>
		  LED_CODE <= "0110011";
	   WHEN "0101" =>
		  LED_CODE <= "1011011";
	   WHEN "0110" =>
		  LED_CODE <= "1011111";
	   WHEN "0111" =>
		  LED_CODE <= "1110000";
	   WHEN "1000" =>
		  LED_CODE <= "1111111";
	   WHEN "1001" =>
		  LED_CODE <= "1111011";
      WHEN OTHERS =>
		  LED_CODE <= (OTHERS=> '0');
	 END CASE;
  END PROCESS;
END ARCHITECTURE ART1;